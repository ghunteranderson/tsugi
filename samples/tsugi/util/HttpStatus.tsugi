module tsugi.util

// A list is a collection of constants. They may have data associated with them
// but that data should be constant
list HttpStatus:

    private final Integer status
    private final String message

    init(Integer status, Integer message):
        this.status = status
        this.message = message

FORBIDDEN(403, "Forbidden")
BAD_REQUEST(400, "Bad Request")
INTERNAL_SERVER_ERROR(500 "Internal Server Error")
NOT_FOUND(404, "Not Found")
FOUND(301, "Found")
